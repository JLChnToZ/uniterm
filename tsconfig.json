{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["dom", "es2017", "es5"],
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "lib",
    "baseUrl": ".",
    "jsx": "react",
    "jsxFactory": "h",
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": [
    "src/**/*"
  ]
}
